    <!--
        SQL Statements
    -->
	<string-array name="sql_create_table_set" translatable="false">
		<item>CREATE TABLE topics (
			_id INTEGER PRIMARY KEY,
			topic_id INTEGER,
			title TEXT,
			url TEXT,
			content TEXT,
			content_rendered TEXT,
			replies INTEGER,
			member_id INTEGER,
			member_username TEXT,
			node_id INTEGER,
			node_name TEXT,
			node_title TEXT,
			node_title_alternative TEXT,
			node_url TEXT,
			node_topics INTEGER,
			created INTEGER,
			last_modified INTEGER,
			last_touched INTEGER
			);</item>

		<item>CREATE TABLE nodes (
			_id INTEGER PRIMARY KEY,
			node_id LONG,
			name TEXT,
			url TEXT,
			title TEXT,
			title_alternative TEXT,
			topics TEXT,
			header TEXT,
			footer TEXT,
			created TEXT
			);</item>
